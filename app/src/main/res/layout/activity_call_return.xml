<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CallHereActivity">


    <!-- 상단 제목 바 (지도 위에 오버레이) -->

    <!-- 검색 카드 (지도 위에 오버레이) -->

    <!-- 내 위치 버튼 (우측 하단) -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/keyword_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:layout_marginStart="391dp"
        android:layout_marginEnd="411dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="건물 혹은 주소를 입력하세요"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/my_location_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="📍"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- 하단 차량 호출 버튼 -->
    <LinearLayout
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 선택된 위치 정보 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="어디서 반납하시나요?"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/selected_location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지도를 터치하여 위치를 선택하세요"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp"
            android:minHeight="40dp"
            android:gravity="center_vertical" />

        <!-- 차량 호출 버튼 -->
        <Button
            android:id="@+id/confirm_location_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black"
            android:text="여기서 차 반납하기"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:enabled="false" />

    </LinearLayout>

</RelativeLayout>