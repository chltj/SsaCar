<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:layout_marginEnd="16dp" />


            <TextView
                android:id="@+id/tv_car_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="차이름"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center" />

            <View
                android:layout_width="45dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- 🕒 남은 시간 텍스트 -->

        <!-- 🔑 상단 버튼 6개 (2열, 3행) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:padding="16dp">

            <!-- ① 문열기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_unlock"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_lock_open"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="문열기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문열기"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ② 문닫기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_lock"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_lock_close"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="문닫기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문닫기"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ③ 고객센터 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_customer"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_headset"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="고객센터" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ④ 비상등 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_hazard"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_warning"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="비상등" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비상등"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ⑤ 경적 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_horn"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_horn"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="경적" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경적"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ⑥ 반납 연장 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_extend"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_time"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="반납 연장" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반납 연장"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </GridLayout>

        <!-- ⑦ 즉시 반납 (하단 중앙) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/btn_return_now"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_return"
                android:background="@drawable/circle_border"
                android:padding="18dp"
                android:contentDescription="즉시 반납" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즉시 반납"
                android:textColor="#888888"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
