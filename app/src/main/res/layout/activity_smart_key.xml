<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 🔼 상단 앱바 (뒤로가기 버튼 + 차량 번호 + 남은 시간) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#6C77FF"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="뒤로가기" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49하1234"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- 🕒 남은 시간 텍스트 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3시간 2분 남음"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="#000000"/>

        <!-- 🔑 상단 버튼 6개 (2열, 3행) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:padding="16dp">

            <!-- ① 문열기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_unlock"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_lock_open"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="문열기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문열기"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ② 문닫기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_lock"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_lock_close"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="문닫기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문닫기"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ③ 고객센터 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_customer"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_headset"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="고객센터" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ④ 비상등 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_hazard"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_warning"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="비상등" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비상등"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ⑤ 경적 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_horn"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_horn"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="경적" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경적"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ⑥ 반납 연장 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_extend"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_time"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="반납 연장" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반납 연장"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </GridLayout>

        <!-- ⑦ 즉시 반납 (하단 중앙) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/btn_return_now"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_return"
                android:background="@drawable/circle_border"
                android:padding="18dp"
                android:contentDescription="즉시 반납" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즉시 반납"
                android:textColor="#888888"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
