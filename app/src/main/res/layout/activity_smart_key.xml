<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 🔼 상단 앱바 (뒤로가기 버튼 + 차량 번호 + 남은 시간) -->
        <!-- 🔽 차량 정보 표시 영역 추가 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F5F5F5">

            <ImageView
                android:id="@+id/image_car"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/text_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량명"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용 시간"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_pickup_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대여 위치"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/text_return_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반납 위치"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>



        <!-- 🔑 상단 버튼 6개 (2열, 3행) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:padding="16dp">

            <!-- ① 문열기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_unlock"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_lock_open"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="문열기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문열기"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ② 문닫기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_lock"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_lock_close"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="문닫기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문닫기"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ③ 고객센터 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_customer"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_headset"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="고객센터" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ④ 비상등 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_hazard"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_warning"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="비상등" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비상등"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ⑤ 경적 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_horn"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_horn"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="경적" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경적"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ⑥ 반납 연장 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_extend"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_time"
                    android:background="@drawable/circle_border"
                    android:padding="18dp"
                    android:contentDescription="반납 연장" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반납 연장"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </GridLayout>

        <!-- ⑦ 즉시 반납 (하단 중앙) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/btn_return_now"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_return"
                android:background="@drawable/circle_border"
                android:padding="18dp"
                android:contentDescription="즉시 반납" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즉시 반납"
                android:textColor="#888888"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
