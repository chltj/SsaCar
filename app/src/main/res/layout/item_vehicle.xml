<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <!-- 차량 이미지 -->
        <ImageView
            android:id="@+id/car_image"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/sample_car"
            android:contentDescription="차량 이미지"
            android:scaleType="centerCrop" />

        <!-- 차량 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 차량명 -->
            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량명"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <!-- 가격 -->
            <TextView
                android:id="@+id/car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="4dp" />

            <!-- 엔진 타입만 표시 -->
            <TextView
                android:id="@+id/car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="엔진타입"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="@drawable/engine_type_background"
                android:padding="4dp" />

            <!-- 🔧 car_efficiency는 숨김 처리 (필요 시 사용) -->
            <TextView
                android:id="@+id/car_efficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연비"
                android:textSize="14sp"
                android:textColor="#666666"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 선택 아이콘 -->
        <ImageView
            android:id="@+id/ic_arrow_forward"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward" />

    </LinearLayout>

</androidx.cardview.widget.CardView>