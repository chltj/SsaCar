<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 헤더 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="면허 등록"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- 안내 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운전면허 정보를 입력해주세요."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- 면허번호 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="면허번호"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editTextLicenseNumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="면허번호 입력 (예: 11-12-345678-90)"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- 발급일자 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발급일자"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editTextIssueDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="발급일자 입력 (예: 2023-01-15)"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- 면허종류 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="면허종류"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editTextLicenseType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="면허종류 입력 (예: 1종보통)"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- 발급기관 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발급기관"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editTextIssuedBy"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="발급기관 입력 (예: 서울지방경찰청)"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- 유효기간 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유효기간"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editTextExpirationDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="유효기간 입력 (예: 2030-01-15)"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp" />

        <!-- 등록 버튼 -->
        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="면허 등록 완료"
            android:backgroundTint="#7D89FF"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>