<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단: 뒤로가기 + 제목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 올바른 단일 태그 형태 -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="차량 정보"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 차량 이미지 -->
        <ImageView
            android:id="@+id/car_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sample_car"
            android:contentDescription="차량 이미지" />


        <!-- 차량 이름, 요금 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시발 자동차"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주행요금 170~230원/km"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />

        <!-- 차량 정보 그리드 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginBottom="16dp">

            <TextView android:text="제조사\n기아" android:padding="8dp" android:textSize="14sp" />
            <TextView android:text="분류\n준중형" android:padding="8dp" android:textSize="14sp" />
            <TextView android:text="연료\n휘발유" android:padding="8dp" android:textSize="14sp" />
            <TextView android:text="변속방식\n자동 무단" android:padding="8dp" android:textSize="14sp" />
            <TextView android:text="승차 인원\n5" android:padding="8dp" android:textSize="14sp" />
            <TextView android:text="하이패스\n포함" android:padding="8dp" android:textSize="14sp" />
        </GridLayout>

        <!-- 안전 옵션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안전 옵션"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />


        <TextView android:text="- 에어백\n- 블랙박스\n- 차로 중앙 유지 보조\n- 어댑티브 크루즈 컨트롤\n- 전방 충돌 방지 보조\n- 후측방 충돌 방지 보조\n- 후방 교차 충돌 방지 보조\n- 후방 카메라"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- 편의 옵션 제목 -->
        <TextView
            android:text="편의 옵션"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView android:text="- 열선시트\n- 블루투스\n- 내비게이션\n- USB포트(기본)\n- 유선 애플 카플레이\n- 유선 안드로이드 오토"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
