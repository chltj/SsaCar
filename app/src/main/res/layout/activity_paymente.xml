<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 🔙 상단 타이틀 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="예약 및 결제하기"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 🚙 차량 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sample_car"
                android:contentDescription="차량 이미지" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시발 자동차"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기름"
                    android:textColor="#888888" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자세히"
                android:textColor="#1E88E5" />
        </LinearLayout>

        <!-- 💰 주행요금 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주행요금   150원~200원/km"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <!-- 🚩 대여·반납 장소 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대여·반납 장소"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- 🕒 이용 시간 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용 시간: 오늘 16:00~20:00 (총 4시간)"
            android:layout_marginTop="8dp" />

        <!-- 🛡️ 차량손해면책 상품 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차량손해면책상품"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radio_insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기부담금 없음 (+₩34,300)" />
            <RadioButton android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기부담금 최대 10만원 (+₩25,000)" />
            <RadioButton android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기부담금 최대 30만원 (+₩16,000)" />
            <RadioButton android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기부담금 최대 70만원 (+₩14,300)" />
        </RadioGroup>

        <!-- 💳 결제 수단 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제 수단"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinner_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="토스페이 결제 시 혜택..."
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp" />

        <!-- 🧾 결제 금액 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최종 결제 금액"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 결제금액: 31,000원"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 📌 약관 동의 -->
        <CheckBox
            android:id="@+id/checkbox_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약 정보 확인 및 약관 동의" />

        <!-- ✅ 결제 버튼 -->
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="총 31,000원 결제하기"
            android:layout_marginTop="16dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
