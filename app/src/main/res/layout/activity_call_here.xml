<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CallHereActivity">

    <!-- 상단 제목 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="어느 주차장으로 가져다드릴까요?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- 검색 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#F5F5F5">

        <EditText
            android:id="@+id/keyword_et"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="🔍 주소나 건물명을 검색하세요"
            android:background="@drawable/search_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:imeOptions="actionSearch"
            android:inputType="text" />

    </LinearLayout>

    <!-- 안내 메시지 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📍 지도를 터치하거나 핀을 드래그하여 정확한 위치를 선택하세요"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:background="#FFF3E0"
        android:gravity="center" />

    <!-- 지도 -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 하단 위치 정보 및 확정 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- 선택된 위치 정보 -->
        <TextView
            android:id="@+id/selected_location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치를 선택해주세요"
            android:textSize="16sp"
            android:textColor="#333333"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="12dp"
            android:minHeight="60dp"
            android:gravity="center_vertical" />

        <!-- 위치 확정 버튼 -->
        <Button
            android:id="@+id/confirm_location_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="위치를 선택해주세요"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#CCCCCC"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>