<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CallHereActivity">

    <!-- 지도 프래그먼트 -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 검색 영역 (지도 위에 오버레이) -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/keyword_et"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="건물 혹은 주소를 입력하세요"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/black"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="검색"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 내 위치 버튼 (우측 하단) -->
    <LinearLayout
        android:id="@+id/my_location_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:elevation="6dp"
        android:focusable="true"
        android:gravity="center">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="📍"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- 하단 차량 호출 버튼 -->
    <LinearLayout
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 선택된 위치 정보 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="어디로 가져다드릴까요?"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/selected_location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="지도를 터치하여 위치를 선택하세요"
            android:textColor="#666666"
            android:textSize="14sp" />

        <!-- 차량 호출 버튼 -->
        <Button
            android:id="@+id/confirm_location_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black"
            android:enabled="false"
            android:text="여기서 차 받기"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>